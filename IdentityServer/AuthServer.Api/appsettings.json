{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=AuthServerDb;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True;Encrypt=False"
  },

  "JwtSettings": {
    "Issuer": "https://localhost:5001",
    "Audience": "https://localhost:5001/resources",
    "SecretKey": "your-super-secret-key-minimum-32-characters-change-in-production-environment",

    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 30,
    "RefreshTokenAbsoluteExpirationDays": 90,
    "RefreshTokenRotationEnabled": true,

    "ClockSkewMinutes": 5
  },

  "EncryptionSettings": {
    "MasterKey": "your-encryption-master-key-32-chars-minimum-change-in-production",
    "UseDataProtection": true
  },

  "PasswordSettings": {
    "DefaultMinLength": 8,
    "DefaultRequireUppercase": true,
    "DefaultRequireLowercase": true,
    "DefaultRequireDigit": true,
    "DefaultRequireSpecialChar": true,
    "HashingIterations": 10000
  },

  "SecuritySettings": {
    "DefaultSessionTimeoutMinutes": 60,
    "DefaultMaxFailedLoginAttempts": 5,
    "DefaultAccountLockoutDurationMinutes": 30,
    "RequireEmailVerification": false,
    "AllowRememberMe": true,
    "RememberMeDurationDays": 30
  },

  "ExternalProviders": {
    "Google": {
      "Enabled": false,
      "ClientId": "",
      "ClientSecret": ""
    },
    "Apple": {
      "Enabled": false,
      "ClientId": "",
      "TeamId": "",
      "KeyId": "",
      "PrivateKey": ""
    },
    "LinkedIn": {
      "Enabled": false,
      "ClientId": "",
      "ClientSecret": ""
    }
  },

  "AdminSettings": {
    "DefaultSuperAdminEmail": "admin@authserver.local",
    "DefaultSuperAdminPassword": "Admin@123456",
    "EnableSelfRegistration": false,
    "RequireEmailVerificationForAdmins": true
  },

  "EmailSettings": {
    "FromEmail": "noreply@authserver.local",
    "FromName": "Auth Server",
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "EnableSsl": true
  },

  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "http://localhost:5000"
    ]
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },

  "AllowedHosts": "*"
}